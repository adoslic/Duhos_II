<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_layout_kalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/itemLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_shape_shadow_small_radius_grey">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/datumLayout"
                android:layout_marginHorizontal="10dp"
                android:background="@color/grey">
                <TextView
                    android:id="@+id/datum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17.07."
                    android:textColor="@color/duhosPlava"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="16sp"></TextView>
                <TextView
                    android:id="@+id/dan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ÄŒet"
                    android:textColor="#899FB0"
                    android:layout_below="@+id/datum"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="12sp"></TextView>
                <RelativeLayout
                    android:id="@+id/timeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/dan"
                    android:visibility="visible">
                    <ImageView
                        android:id="@+id/timeIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_time"
                        android:layout_centerVertical="true"></ImageView>

                    <TextView
                        android:id="@+id/timeTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/timeIcon"
                        android:text="10:30"
                        android:textColor="@color/duhosPlava"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_marginLeft="5dp"></TextView>
                </RelativeLayout>

                <TextView
                    android:id="@+id/dateDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--.--.----."
                    android:textColor="@color/duhosPlava"
                    android:layout_below="@+id/timeLayout"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"></TextView>

                <RelativeLayout
                    android:id="@+id/alarmLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/timeLayout"
                    android:visibility="gone">
                <ImageView
                    android:id="@+id/alarmIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_alarm"
                    android:layout_centerVertical="true"></ImageView>
                    <TextView
                        android:id="@+id/alarmTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/alarmIcon"
                        android:text=""
                        android:textColor="@color/duhosPlava"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_marginLeft="5dp"></TextView>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/contentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/slikaLayout"
                android:layout_toEndOf="@+id/datumLayout"
                android:background="@drawable/rectangle_shape_small_radius_white"
                android:paddingVertical="10dp">
                <TextView
                    android:id="@+id/naslov"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/duhosPlava"
                    android:layout_margin="10dp"
                    android:text="Naslov"
                    android:fontFamily="@font/montserrat_bold"/>
                <TextView
                    android:id="@+id/opis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#899FB0"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/naslov"
                    android:text="Opis"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:lines="3"
                    android:fontFamily="@font/montserrat_medium"
                    android:autoLink="web"
                    android:textColorLink="@color/linkColor"
                    android:justificationMode="inter_word"/>
                <TextView
                    android:id="@+id/lokacija_tekst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/duhosPlava"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/opis"
                    android:text="Lokacija:"
                    android:fontFamily="@font/montserrat_bold"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/lokacija"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/duhosPlava"
                    android:layout_marginVertical="10dp"
                    android:layout_below="@+id/opis"
                    android:text="Lokacija"
                    android:layout_toRightOf="@+id/lokacija_tekst"
                    android:visibility="gone"
                    android:fontFamily="@font/montserrat_medium"/>
                <ImageButton
                    android:id="@+id/obavijest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_addnotification"
                    android:background="@color/white"
                    android:layout_below="@id/lokacija"
                    android:layout_margin="10dp"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"></ImageButton>
            </RelativeLayout>
        </RelativeLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</RelativeLayout>