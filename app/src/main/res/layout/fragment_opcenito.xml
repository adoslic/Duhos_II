<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/opcenitoImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/duhos_opca"></ImageView>

        <TextView
            android:id="@+id/opcenitoNaslov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/opcenitoImage"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:text="Moli i uči"
            android:textColor="@color/duhosPlava"
            android:textSize="20sp"
            android:fontFamily="@font/firasans_bold"></TextView>

        <TextView
            android:id="@+id/opcenitoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/opcenitoNaslov"
            android:layout_marginTop="25dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="10dp"
            android:text="@string/opcenito_info"
            android:textColor="@color/duhosPlava"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_medium"
            android:autoLink="web"></TextView>
    </RelativeLayout>
</ScrollView>