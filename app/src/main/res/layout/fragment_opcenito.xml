<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/opcenitoImage"
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:src="@drawable/opcenito_slika"></ImageView>

        <TextView
            android:id="@+id/opcenitoNaslov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/opcenitoImage"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:text="Uči i moli"
            android:textColor="@color/duhosPlava"
            android:textSize="24sp"></TextView>

        <TextView
            android:id="@+id/kapelan1Tekst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/opcenitoNaslov"
            android:layout_marginTop="25dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/opcenito_info"
            android:textColor="@color/duhosPlava"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"></TextView>
    </RelativeLayout>
</ScrollView>