<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/knjiznicaImage"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:src="@drawable/knjiznica">
    </ImageView>

    <TextView
        android:id="@+id/knjiznicaNaslov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/knjiznica_naslov"
        android:layout_below="@+id/knjiznicaImage"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/duhosPlava"
        android:textSize="24sp"></TextView>

    <TextView
        android:id="@+id/knjiznicaTekst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/knjiznica_tekst"
        android:layout_below="@+id/knjiznicaNaslov"
        android:layout_marginTop="25dp"
        android:textColor="@color/duhosPlava"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:textSize="16sp"></TextView>
</RelativeLayout>