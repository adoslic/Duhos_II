<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
 <ScrollView
     android:id="@+id/multimedija_opsirno_scollView"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="@color/white"
     android:fillViewport="true"
     >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/naslovOpsirno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="Naslov"
            android:textSize="20sp"
            android:textColor="@color/duhosPlava"
            android:fontFamily="@font/firasans_bold"
            android:gravity="center"
            android:padding="10dp"
            android:textIsSelectable="true"></TextView>

        <TextView
            android:id="@+id/sadrzajOpsirno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/naslovOpsirno"
            android:layout_marginTop="14dp"
            android:layout_marginHorizontal="10dp"
            android:text="Tekst"
            android:textSize="16sp"
            android:textColor="@color/duhosPlava"
            android:paddingVertical="10dp"
            android:fontFamily="@font/montserrat_medium"
            android:justificationMode="inter_word"
            android:autoLink="web"
            android:textColorLink="@color/linkColor"></TextView>

        <TextView
            android:id="@+id/idiNaPoveznicu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/sadrzajOpsirno"
            android:text="U članku pročitajte više."
            android:textSize="16sp"
            android:textColor="@color/duhosPlava"
            android:textAlignment="center"
            android:gravity="center"
            android:padding="15dp"
            android:fontFamily="@font/montserrat_medium"></TextView>
        <ImageButton
            android:id="@+id/linkButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_buttonyoutube"
            android:background="#55FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/idiNaPoveznicu"
            android:padding="10dp" />
    </RelativeLayout>

</ScrollView>



</RelativeLayout>