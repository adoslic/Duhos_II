<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:id="@+id/noInternetImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_nointernetpicture"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noInternetText"
            android:textColor="#F73C57"
            android:text="Nema interneta"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/noInternetImage"
            android:layout_marginTop="24dp"
            android:textSize="20sp"
            android:fontFamily="@font/firasans_bold"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/noInternetText"
            android:layout_marginTop="10dp"
            android:text="Molim te da provjeriš jesi li povezan na internet pa se vrati po sadržaj"
            android:textColor="@color/duhosPlava"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_medium"
            android:textAlignment="center"
            android:gravity="center_horizontal"></TextView>

    <ImageButton
        android:id="@+id/osvjeziButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_osvjezibutton"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="#55FFFFFF"
        android:layout_marginBottom="20dp"></ImageButton>

</RelativeLayout>