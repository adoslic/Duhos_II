<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/itemLayout"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@drawable/rectangle_shape_shadow_small_radius">
            <RelativeLayout
                android:id="@+id/slikaLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/slika"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_trzalica">
                </ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/tekstLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/slikaLayout"
                android:layout_toEndOf="@+id/slikaLayout">
                <TextView
                    android:id="@+id/naslov"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="250dp"
                    android:textSize="20sp"
                    android:textColor="@color/duhosPlava"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:text="Naziv pjesme"
                    android:ellipsize="end"
                    android:maxLines="1"/>
            </RelativeLayout>
        </RelativeLayout>

</RelativeLayout>