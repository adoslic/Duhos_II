<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/itemLayout"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rectangle_shape_shadow">
            <RelativeLayout
                android:id="@+id/slikaLayout"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:background="@drawable/rectangle_shape_grey">
                <ImageView
                    android:id="@+id/slika"
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    android:layout_centerInParent="true"
                    android:layout_margin="15dp"
                    android:padding="10dp"
                    android:background="@color/shimmer_bg">
                </ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/tekstLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/slikaLayout"
                android:layout_toEndOf="@+id/slikaLayout">
                <TextView
                    android:id="@+id/naslov"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="250dp"
                    android:textSize="20sp"
                    android:textColor="@color/duhosPlava"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:background="@color/shimmer_bg"/>
                <TextView
                    android:id="@+id/datum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="150dp"
                    android:textSize="16sp"
                    android:textColor="@color/duhosPlava"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/naslov"
                    android:layout_marginLeft="25dp"
                    android:background="@color/shimmer_bg"/>
            </RelativeLayout>
        </RelativeLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>
</RelativeLayout>