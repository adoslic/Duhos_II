<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/itemLayout"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rectangle_shape_shadow">
        <RelativeLayout
            android:id="@+id/slikaLayout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:background="@drawable/rectangle_shape_grey">
            <ImageView
                android:id="@+id/slika"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_biblija"
                android:layout_centerInParent="true"
                android:layout_margin="15dp"
                android:padding="10dp"
                android:background="@drawable/rectangle_shape_grey">
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/slikaLayout"
            android:layout_toEndOf="@+id/slikaLayout">
            <TextView
                android:id="@+id/naslov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Naslov molitve"
                android:textSize="20sp"
                android:textColor="@color/duhosPlava"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:id="@+id/datum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28.04.2020."
                android:textSize="16sp"
                android:textColor="@color/duhosPlava"
                android:layout_marginTop="10dp"
                android:layout_below="@id/naslov"
                android:layout_marginLeft="25dp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>