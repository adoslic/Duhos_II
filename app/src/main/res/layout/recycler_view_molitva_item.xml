<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/itemLayout"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="@drawable/rectangle_shape_shadow">
            <RelativeLayout
                android:id="@+id/slikaLayout"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:background="@drawable/rectangle_shape_grey">
                <ImageView
                    android:id="@+id/slika"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp">
                </ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/tekstLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/slikaLayout"
                android:layout_toEndOf="@+id/slikaLayout">
                <TextView
                    android:id="@+id/naslov"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/duhosPlava"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="@font/firasans_semibold"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:autoLink="web"/>
                <TextView
                    android:id="@+id/datum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="150dp"
                    android:textSize="12sp"
                    android:textColor="@color/duhosPlava"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="25dp"
                    android:fontFamily="@font/montserrat_medium"/>
            </RelativeLayout>
        </RelativeLayout>

</RelativeLayout>