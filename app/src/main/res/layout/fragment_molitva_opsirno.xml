<?xml version="1.0" encoding="utf-8"?>
 <ScrollView
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/slikaOpsirno"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/molitvaslika1"></ImageView>

        <TextView
            android:id="@+id/naslovOpsirno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/slikaOpsirno"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Naslov"
            android:textSize="30sp"
            android:textColor="@color/duhosPlava"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/tekstOpsirno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/naslovOpsirno"
            android:layout_marginTop="10dp"
            android:text="Tekst"
            android:textSize="22sp"
            android:layout_margin="10dp"
            android:textColor="@color/duhosPlava"
            android:textAlignment="gravity"
            android:gravity="center"></TextView>
    </RelativeLayout>
</ScrollView>