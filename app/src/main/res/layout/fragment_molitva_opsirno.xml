<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
 <ScrollView
     android:id="@+id/molitva_opsirno_scollView"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="@color/white"
     android:fillViewport="true"
     >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/slikaOpsirno"
            android:layout_width="match_parent"
            android:layout_height="200dp"></ImageView>

        <TextView
            android:id="@+id/naslovOpsirno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/slikaOpsirno"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:text="Naslov"
            android:textSize="20sp"
            android:textColor="@color/duhosPlava"
            android:fontFamily="@font/firasans_bold"
            android:textAlignment="center"
            android:gravity="center"
            android:textIsSelectable="true"></TextView>

        <TextView
            android:id="@+id/tekstOpsirno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/naslovOpsirno"
            android:layout_marginTop="10dp"
            android:text="@string/kapelan1_tekst"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:textColor="@color/duhosPlava"
            android:layout_gravity="center_vertical|end"
            android:gravity="start"
            android:fontFamily="@font/montserrat_medium"
            android:textIsSelectable="true"
            android:autoLink="web"
            android:textColorLink="@color/linkColor"></TextView>
        <ImageButton
            android:id="@+id/shareButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_button_share"
            android:background="#55FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tekstOpsirno"
            android:padding="10dp"/>
    </RelativeLayout>

</ScrollView>



</RelativeLayout>